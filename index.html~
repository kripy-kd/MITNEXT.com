<script>
    document.addEventListener("DOMContentLoaded", function () {
        const image = document.getElementById("dynamic-image");

        // Map step numbers to image paths
        const stepImages = {
            1: "images/image.png",
            2: "images/icons/2.png",
            3: "images/icons/12.png",
            4: "images/icons/14.png",
            5: "images/icons/32.png",
        };

        const stepItems = document.querySelectorAll(".step-item");
        const indicatorDots = document.querySelectorAll(".indicator-dot");

        const observer = new IntersectionObserver(
            entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const step = entry.target.getAttribute("data-step");

                        // Change image
                        const newSrc = stepImages[step];
                        if (newSrc) image.src = newSrc;

                        // Highlight active step
                        stepItems.forEach(el => el.classList.remove("active-step"));
                        entry.target.classList.add("active-step");

                        // Highlight dot
                        indicatorDots.forEach(dot => dot.classList.remove("bg-red-500"));
                        const activeDot = document.querySelector(`.indicator-dot[data-step="${step}"]`);
                        if (activeDot) activeDot.classList.add("bg-red-500");
                    }
                });
            },
            {
                threshold: 0.6, // Trigger when 60% is visible
            }
        );

        stepItems.forEach(item => observer.observe(item));
    });
</script>

</body>
